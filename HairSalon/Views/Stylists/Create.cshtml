@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3>Add a new stylist</h3>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  <br>
  @Html.LabelFor(model => model.Info)
  @Html.TextBoxFor(model => model.Info)
  <br>
  <br>
  <input type="submit" value="Add new stylist"/>
}
<br>
<p>@Html.ActionLink("Show all stylists", "Index")</p>